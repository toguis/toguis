<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tile_repeat"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtCommentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="@string/general_empty_text"
        android:textColor="#cccccc"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/general_empty_text"
        android:textColor="#cccccc" />

    <TextView
        android:id="@+id/txtCommentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:text="@string/general_empty_text"
        android:textColor="#cccccc"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imgSep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/poi_detail_image_description"
        android:scaleType="fitXY"
        android:src="@drawable/line" />

</LinearLayout>
