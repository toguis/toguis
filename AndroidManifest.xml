<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.uniajc.vtf"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.edu.uniajc.vtf.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.edu.uniajc.vtf.security.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="co.edu.uniajc.vtf.security.ConfigLoginActivity"
            android:label="@string/title_activity_config_login" >
        </activity>
        <activity
            android:name="co.edu.uniajc.vtf.security.CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name="co.edu.uniajc.vtf.security.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
        <activity
            android:name="co.edu.uniajc.vtf.ContentActivity"
            android:label="@string/title_activity_content" >
        </activity>
        <activity android:name="com.facebook.LoginActivity"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:label="@string/app_name" />       
    </application>

</manifest>
